</head>

<toaster-container toaster-options="{'time-out': 3000, 'close-button':true, 'animation-class': 'toast-top-right'}"></toaster-container>

<body ng-app="reportApp" ng-controller="MainController" class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper" style="height: auto; min-height: 100%;">
        <header class="main-header">
            <a class="logo">
                <span class="logo-mini"><b>ACHI</b></span>
                <span class="logo-lg"><b>ACHI</b></span>
            </a>

        </header>
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel" style="background-color: #1283ae !important;">
                    <div class="pull-left image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">

                        <div class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @*<i class="fa fa-circle text-success"></i>Admin*@
                                <p>@Convert.ToString(Session["UserName"]) </p>

                                <b class="fa fa-cog"></b>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li><a href="#">Profile</a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("Logout", "Home")">Sign out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li ng-repeat="menu in MenuList" ng-class="{'active': rootname == menu.Path }"><a href="{{menu.Path}}" ng-click="updatemenuclick(menu.Path)"><i class="{{menu.Icon}} "></i><span> {{menu.MenuName}}</span></a></li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            <div class="container">
                <section class="content">
                    @RenderBody()
                    <div class="modal fade" id="LayoutModel" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-hidden="true">
                        <div class="modal-dialog" style="width:75%">
                            <div class="modal-content">
                                <div class="modal-header content-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel" style="margin-left:40%;">Application Approval Status</h4>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <div class="row">
                                            <div class="box-body">
                                                <div class="row">

                                                    <div ng-include="'ShowApprovalDetails'"></div>
                                                    <div class="form-group col-lg-12">
                                                        <div class="col-sm-offset-4 col-sm-10">

                                                            <input type="button" value="Update" ng-click="Update(currency)" class="btn  btn-circle btn-default btn-outline-info" />
                                                            &nbsp;

                                                            <input type="button" value="Cancel" ng-click="layoutcancel()" class="btn  btn-circle btn-default btn-outline-info" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-6 col-sm-offset-2 control-label label-danger" ng-show="errorinfo.length > 0">{{errorinfo}}</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 1.0.0
                </div>
                <strong>Copyright &copy; 2017 COBA</strong> All rights reserved.
            </div>
        </footer>
    </div>
    <script src="~/plugins/moment.js"></script>
    <script src="~/Assert/Jquery-1.11.0.min.js"></script>
    <script src="~/Assert/bootstrap.min.js"></script>
