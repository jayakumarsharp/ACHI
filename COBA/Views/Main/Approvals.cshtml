<div style="margin-left:-10px;margin-right:-10px">
    <div ng-controller="ApprovalsController">
        <ul class="nav nav-tabs">
            <li class="active"><a ng-click="activatetab(1)" data-toggle="tab" aria-expanded="false"><strong>My Approvals</strong> </a></li>            
            <li class=""><a ng-click="activatetab(3)" data-toggle="tab" aria-expanded="true"><strong> Delegate Request</strong> </a></li>
            <li class=""><a ng-click="activatetab(2)" data-toggle="tab" aria-expanded="true"><strong> Delegate Approvals Status</strong> </a></li>
            @*<li class=""><a ng-click="activatetab(4)" data-toggle="tab" aria-expanded="true"><strong> Denied Delegates</strong> </a></li>*@
        </ul>
        <div>
            <div class="tab-pane" ng-if="tab1">
                <div class="row m-t-xs">
                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Pending Approvals</h3>
                            </div>
                            <form role="form">
                                <div id="grid1" ui-grid="PendingGrid" ui-grid-pagination class="grid"></div>
                            </form>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Completed Approvals</h3>
                            </div>
                            <form role="form">
                                <div id="grid1" ui-grid="CompletedGrid" ui-grid-pagination class="grid"></div>
                            </form>
                        </div>
                    </div>


                    <div class="modal fade" id="LayoutModel1" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-hidden="true">
                        <div class="modal-dialog" style="width:75%">
                            <div class="modal-content">
                                <div class="modal-header content-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel" style="margin-left:40%;">Approval Status</h4>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <div class="row">
                                            <div class="box-body">
                                                <div class="row">
                                                    <div ng-include="'ShowApprovalDetails'"></div>
                                                    <div class="form-group col-lg-12">
                                                        <div class="col-sm-offset-5 col-sm-10">
                                                            &nbsp;
                                                            <span>
                                                                <input type="button" value="Update" ng-click="UpdatecurrencyConversion(currency)" class="btn  btn-circle btn-default btn-outline-info" />
                                                            </span>&nbsp;
                                                            <input type="button" value="Cancel" ng-click="cancel()" class="btn  btn-circle btn-default btn-outline-info" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-6 col-sm-offset-2 control-label label-danger" ng-show="errorinfo.length > 0">{{errorinfo}}</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.tab-pane -->
