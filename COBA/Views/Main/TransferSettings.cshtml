<div class="whitebg">
    <div ng-controller="TransferSettingsController" class="row">
        <form novalidate class="form-horizontal">
            <div class="form-group">
                <label for="inputTask" class="col-md-2 col-md-offset-2  control-label">Transfer Stauts</label>
                <div class="col-md-4">
                    <i class="fa fa-toggle-on active" ng-if="status == true" ng-click="changeStatus();"></i>
                    <i class="fa fa-toggle-on fa-rotate-180 inactive" ng-if="status == false" ng-click="changeStatus();"></i>
                </div>
            </div>

            <div ng-show="status">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Transfer To</label>
                    <div class="col-sm-5">

                        <select ng-model="Transferuser" class="form-control" style="height:33px">
                            <option value="">- Select -</option>
                            <option ng-repeat="x in userlist" value="{{x.Approver}}">{{x.Approver}}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label class="col-sm-3 control-label">Transfer Duration</label>
                    </div>
                    <div class="col-lg-4">
                        <div class='input-group date' datetimepicker ng-model="TransferFrom">
                            <input type='text' class="form-control" readonly />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class='input-group date' datetimepicker ng-model="TransferTo">
                            <input type='text' class="form-control" readonly />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <span>
                        <input type="button" value="Save" data-ng-click="update()" class="btn btn-circle btn-default btn-outline-info" />
                    </span>
                    <input type="button" value="Cancel" data-ng-click="cancel()" class="btn btn-circle btn-default btn-outline-info" />
                </div>
            </div>
        </form>
    </div>
</div>


<style>
    i.active, .inactive {
        font-size: 40px;
        cursor: pointer;
    }

    i.active, .inactive {
        font-size: 40px;
        cursor: pointer;
    }

    i.active {
        color: #5cb85c;
    }

    i.inactive {
        color: #d9534f;
    }
</style>
