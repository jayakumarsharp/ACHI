@model  UserViewModel

<div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <img src="~/img/Close.png" />
                </button>
                <h4>Add User</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateUser", "UserManagement", FormMethod.Post, new { @class = "form-horizontal well" }))
                { 

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">EmpCode</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="Empcode">
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">EmpName</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="EmpName">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-password" class="col-lg-4 control-label">Password</label>
                        <div class="col-lg-6">
                            <input class="text-backcolor col-lg-7" name="password" id="password" placeholder="***********" type="password" autocomplete="off" maxlength="100">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">EmailID</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="email">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Contact No</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="contact">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">UserType</label>
                        <div class="col-lg-6">
                            <select id="usertype" class="col-lg-7">
                                <option value="-1">--Select--</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Manager</label>
                        <div class="col-lg-6">
                            <select id="manager" class="col-lg-7">
                                <option value="-1">--Select--</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">HOD</label>
                        <div class="col-lg-6">
                            <select id="hod" class="col-lg-7">
                                <option value="-1">--Select--</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Role</label>
                        <div class="col-lg-6">
                            <select id="role" class="col-lg-7">
                                <option value="-1">--Select--</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Team</label>
                        <div class="col-lg-6">
                            <select id="team" class="col-lg-7">
                                <option value="-1">--Select--</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="chkstatus" class="lblchk col-lg-4 control-label">Status</label>
                        <div class="col-lg-8">
                            <input id="chkstatus" name="checkResp" type="checkbox">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-4 mtop10">
                            <button type="button" id="btnuseradd" class="SaveBtn">Add</button>
                            <button type="button" class="CancelBtn" id="createUser_cancel">Reset</button>
                        </div>
                    </div>

                    <p class="validation bg-danger" id="createUser_validator"></p>
                }
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

    $("#input-username").blur(function () {
        document.getElementById('usererror').style.display = "none";
    });

    function checkadduser() {
        if ($('#Empcode').val() == "") {
            $('#createUser_validator').html('Please enter Empcode')
            return false;
        }
        else if ($('#EmpName').val() == "") {
            $('#createUser_validator').html('Please enter Empname')
            return false;
        }
        else if ($('#password').val() == "") {
            $('#createUser_validator').html('Please enter Password')
            return false;
        }
        else if ($("#manager").val() == "-1") {
            $('#createUser_validator').html('Please select Manager')
            return false;
        }
        else if ($("#hod").val() == "-1") {
            $('#createUser_validator').html('Please select Hod')
            return false;
        }
        else if ($("#usertype").val() == "-1") {
            $('#createUser_validator').html('Please select usertype')
            return false;
        }
        else if ($("#email").val() == "") {
            $('#createUser_validator').html('Please enter EmailID')
            return false;
        }
        else if ($("#contact").val() == "-1") {
            $('#createUser_validator').html('Please enter Contactnumber')
            return false;
        }
        else if ($("#role").val() == "-1") {
            $('#createUser_validator').html('Please select Role')
            return false;
        }
        else if ($("#team").val() == "-1") {
            $('#createUser_validator').html('Please select Team')
            return false;

        }

        return true;
    }

    

</script>

