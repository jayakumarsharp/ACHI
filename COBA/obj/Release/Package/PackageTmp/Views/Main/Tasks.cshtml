<!-- BEGIN PAGE BREADCRUMBS -->

<section class="content" ng-controller="TaskController">

    <div ng-show="!showaction">

        <div class="row pull-right">
            <button data-ng-click="showadd()" class="btn btn-primary">Add <i class="fa fa-plus"></i></button>
        </div>

        <table class="table table-responsive" datatable="" dt-options="dtOptions" dt-columns="dtColumns"></table>
    </div>

    <div ng-show="showaction">
        <h4 class="modal-title" id="myModalLabel" ng-hide="editMode">Add Task</h4>
        <h4 class="modal-title" id="myModalLabel" ng-show="editMode">Edit Task</h4>
        <form novalidate class="form-horizontal" role="form" name="addcurrencyform">
            <div class="form-group">
                <label class="col-sm-3 control-label">Task Name</label>
                <div class="col-sm-6" style="margin-top:6px">
                    <input type="text" numberdotonly class="form-control" maxlength="150" ng-model="currency.Name" title="Select Role" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Description</label>
                <div class="col-sm-6" style="margin-top:6px">
                    <input type="text" numberdotonly class="form-control" maxlength="150" ng-model="currency.Description" title="Select Role" required />
                </div>
            </div>

            <div class="form-group">
                <label for="SBU" class="col-sm-3 control-label"></label>
                <div class="col-sm-8" style="margin-top:6px">
                    <label class="mt-checkbox mt-checkbox-outline">
                        <input type="checkbox" ng-model="TaskActive" /> IsActive
                        <span></span>
                    </label>
                </div>
            </div>


            <div class="form-group">
                <label for="SBU" class="col-sm-3 control-label"></label>
                <div class="col-sm-8">
                    <label class="mt-checkbox mt-checkbox-outline">
                        <input type="checkbox" ng-model="IsSignOff" /> SignOff
                        <span></span>
                    </label>


                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-10">
                    <span data-ng-hide="editMode">
                        <input type="button" value="Add" ng-disabled="addcurrencyform.$invalid"  ng-click="add(currency)" class="btn btn-primary" />
                    </span>
                    <span data-ng-show="editMode">
                        <input type="button" value="Update" ng-disabled="addcurrencyform.$invalid"  data-ng-click="UpdatecurrencyConversion(ecurrency)" class="btn btn-primary" />
                    </span>
                    <input type="button" value="Cancel" data-ng-click="cancel()" class="btn btn-primary cancel" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-6 col-sm-offset-2 control-label label-danger" ng-show="errorinfo.length > 0">{{errorinfo}}</label>
            </div>
        </form>
    </div>


    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" style="width:25%">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #3c8dbc;color:white">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                    <h4 class="modal-title" id="myModalLabel">Confirm Action</h4>
                </div>
                <br />
                <div class="modal-body">
                    Are you sure you want to delete?
                </div>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-info" data-ng-click="delete()">Yes</button>
                    <button type="button" class="btn btn-sm btn-circle btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</section>