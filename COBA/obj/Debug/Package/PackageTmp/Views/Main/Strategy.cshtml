<!-- BEGIN PAGE BREADCRUMBS -->
<div ng-controller="StrategyController" class="whitebg">
    <div class="box-header with-border">
        <h3 class="box-title">    Model/Algo Management   </h3>
    </div>

    <div class="row margintop10">
        <button data-ng-click="showadd()" ng-show="!IsReadOnly" class="btn btn-outline-info">Add Model/Algo &nbsp;    <i class="fa fa-plus"></i></button>
    </div>
    <section class="content">

        <div class="row">
            <div id="grid1" ui-grid="CurrencyGrid" ui-grid-pagination class="grid"></div>
        </div>
    </section>

    <div class="modal fade" id="currencyModel" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-hidden="true">
        <div class="modal-dialog" style="width:75%">
            <div class="modal-content">
                <div class="modal-header content-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title text-center" id="myModalLabel" ng-hide="editMode">Add Model/Algo </h4>
                    <h4 class="modal-title text-center" id="myModalLabel" ng-show="editMode">Edit Model/Algo</h4>
                </div>
                <div class="modal-body">
                    <div>

                        <div class="row">
                            <div class="box-body">
                                <div class="row">
                                    <form novalidate role="form" name="adduserform">
                                        <div ng-include="'ShowApplicationDetails'"></div>
                                    </form>
                                    <div class="form-group col-lg-12">
                                        <div class="col-sm-offset-4 col-sm-10">

                                            <span data-ng-hide="editMode">
                                                <input type="button" value="Save" ng-disabled="adduserform.$invalid" ng-click="InsertStrategy(currency)" class="btn  btn-circle btn-default btn-outline-info" />
                                            </span>&nbsp;
                                            <span data-ng-show="editMode">
                                                <input type="button" value="Update" ng-click="UpdateStrategy(ecurrency)" class="btn  btn-circle btn-default btn-outline-info" />
                                            </span>&nbsp;
                                            <input type="button" value="Cancel" ng-click="cancel()" class="btn  btn-circle btn-default btn-outline-info" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-6 col-sm-offset-2 control-label label-danger" ng-show="errorinfo.length > 0">{{errorinfo}}</label>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div ng-include="'ViewApprovals'"></div>

</div>
<style>
    .box-body {
        padding: 4px;
    }
</style>
