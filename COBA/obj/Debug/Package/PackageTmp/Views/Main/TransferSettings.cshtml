<div class="col-lg-10 col-md-9 main-content basic-page sidebar" style="width:83%;">
    <h4>     Delegate Setting</h4>
    <div ng-controller="TransferSettingsController" class="col-md-12">
        <div class="form-group">
            <label for="inputTask" class="col-md-3 control-label">Delegate Status</label>
            <div class="col-md-4">
                <i class="fa fa-toggle-on active" ng-if="status == true" ng-click="changeStatus();"></i>
                <i class="fa fa-toggle-on fa-rotate-180 inactive" ng-if="status == false" ng-click="changeStatus();"></i>
            </div>
        </div>
        <div ng-show="status">
            <div class="form-group">
                <label class="col-sm-3 control-label">Delegate To</label>
                <div class="col-sm-4">
                    <select ng-model="Transferuser" class="form-control" style="height:33px">
                        <option value="">- Select -</option>
                        <option ng-repeat="x in userlist" value="{{x.Approver}}">{{x.Approver}}</option>
                    </select>
                </div>
            </div>
            <div class="form-group">

                <label class="col-sm-3 control-label">Transfer Duration From</label>

                <div class="col-lg-4">
                    <div class='input-group date' datetimepicker ng-model="TransferFrom">
                        <input type='text' class="form-control"  />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">

                <label class="col-sm-3 control-label">Transfer Duration To</label>
                <div class="col-lg-4">
                    <div class='input-group date' datetimepicker ng-model="TransferTo">
                        <input type='text' class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>

                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
                <span>
                    <input type="button" value="Save" data-ng-click="update()" class="btn btn-primary" />
                </span>
            </div>
        </div>

    </div>
</div>


