<!-- BEGIN PAGE BREADCRUMBS -->
<div ng-controller="CountryController"   class="box box-info" style="margin-top:20px">
    <div class="box-header with-border">
        <h3 class="box-title">Country Management</h3>
        <hr />
        <div class="form-group" ng-show="!IsReadOnly" ng-class="{'has-error':inputTask.$invalid && !inputTask.$pristine }">
            <label for="inputTask" class="col-md-2 col-md-offset-2  control-label">Country</label>
            <div class="col-md-4">
                <input type="text" class="form-control" maxlength="50" name="inputTask" ng-model=Country.TaskName>
            </div>
            <div>
                <button title="Clear Task name field" data-ng-click="cancel()" class="btn btn-sm btn-info btn-flat pull-right">Clear </button>
            </div>
            <div>
                <button title="Update Task" data-ng-show="editMode" data-ng-click="UpdateCountry(Country)" class="btn btn-sm btn-info btn-flat pull-right">Update</button><!--<i class="fa fa-plus" style="color:white"></i>-->
                <button title="Add new task" data-ng-hide="editMode" data-ng-click="add(Country)" class="btn btn-sm btn-info btn-flat pull-right">Add <i class="fa fa-plus" style="color:white"></i></button>
            </div>

        </div>
    </div>
    <div class="box-body">
        <div class="mnbxcont">
            <div data-ag-grid="CountryGrid" class="ag-blue" style="color:#000;height: 400px !important;width:50%;margin-left:20%"></div>
        </div>
    </div>
</div>













