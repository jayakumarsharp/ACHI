<section class="content">
    <div ng-controller="RegionMasterController" class="nav-tabs-custom">
        <div ng-include="'Main/ConfirmModal'"></div>
        <div class="row pull-right">
            <button ng-show="!showAddwindow" data-ng-click="Showadd()" class="btn btn-primary">Add <i class="fa fa-plus"></i></button>
        </div>
        <div ng-show="showAddwindow" class="sec-one">
            <div class="col-md-10 col-md-offset-2 row">

                <div class="btns-b" ng-class="{'has-error':inputTask.$invalid && !inputTask.$pristine }">
                    <div class="col-md-6 form-group" style="position: static;">
                        <label for="input-text-1">Region Name</label>
                        <input type="text" class="form-control" id="input-id-1" placeholder="Region Name" ng-model=RegionMaster.RegionName>
                    </div>
                </div>
                <div class="col-md-12 form-group" style="position: static;">
                    <button title="Update Task" data-ng-show="editMode" data-ng-click="UpdateRegionMaster(RegionMaster)" class="col-md-2 col-md-offset-1 btn btn-primary">Update</button><!--<i class="fa fa-plus" style="color:white"></i>-->
                    <button title="Add new task" data-ng-hide="editMode" data-ng-click="add(RegionMaster)" class="col-md-2 col-md-offset-1 btn btn-primary">Add <i class="fa fa-plus" style="color:white"></i></button>
                    <button title="Clear Task name field" data-ng-click="Confirmcancel()" class="col-md-2 btn btn-primary cancel">Cancel</button>
                </div>

            </div>
        </div>
        <div ng-show="!showAddwindow" class="col-md-12 data-table" style="width:70%;margin-left:14%;">
            <table class="table table-responsive" datatable="" dt-options="dtOptions" dt-columns="dtColumns"></table>
        </div>
    </div>
</section>











