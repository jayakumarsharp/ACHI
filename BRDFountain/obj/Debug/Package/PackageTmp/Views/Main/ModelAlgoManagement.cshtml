<!-- BEGIN PAGE BREADCRUMBS -->
<div ng-controller="StrategyController">
    <div ng-include="'ConfirmModal'"></div>
    <div class="col-lg-10 col-md-9 main-content basic-page sidebar" style="width:83%;" ng-show="!showaction">
        <h4>Strategy Management   </h4>
        <div class="row pull-right">
            <button data-ng-click="showadd()" class="btn btn-primary">Add Strategy &nbsp;    <i class="fa fa-plus"></i></button>
        </div>
        <div class="col-md-12 data-table">
            <table datatable="" dt-options="dtOptions" dt-columns="dtColumns" class="table table-responsive"></table>
        </div>
    </div>
    <div ng-show="showaction">
        <div class="col-lg-8 col-md-6 main-content basic-page sidebar">
            <h4 style="margin-bottom:8px !important;" ng-hide="editMode">Add Strategy </h4>
            <h4 style="margin-bottom:8px !important;" ng-show="editMode">Edit Strategy</h4>
            <div class="row">
                <div class="box-body">
                    <div class="row">
                        <div ng-include="'ShowApplicationDetails'"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-3 right-sidebar sidebar">
            <ol>
                <li ng-class="{'active-ol':pageList[0].IsValid,'done-act':pageList[1].IsValid}">
                    <a ng-click="activateTab(0)">Basic Details</a>
                </li>

                <li ng-class="{'active-ol':pageList[1].IsValid,'done-act':pageList[2].IsValid}">
                    <a ng-click="activateTab(1)">Additional DETAILS</a>
                </li>

            </ol>
        </div>
    </div>
    <div ng-include="'ViewApprovals'"></div>
    <div ng-include="'ConfirmModal'"></div>
</div>

<style>
    .disabled {
        cursor: not-allowed;
    }

    .basic-page .form-control {
        height: 36px;
        padding: 0px 9px;
    }

    table tr {
        font-size:14px;
    }
</style>