@Html.Hidden("RedirectToRoles", Url.Action("Index", "RoleManagement", new { Page = @Request.QueryString["Page"] }))
@Html.Hidden("RedirectToUserManagement", Url.Action("Index", "UserManagement", new { Page = @Request.QueryString["Page"] }))

<div id="myModal" class="modal fade ">
    <div class="modal-dialog dlogout">
        <div class="modal-content clogout">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <img src="~/img/Close.png" /></button>

                <h4 class="modal-title">Confirmation </h4>
            </div>
            <div class="modal-body">
                <p style="text-align: center !important; margin: 12px !important">Are you sure want to Logout?</p>
            </div>
            <div class="modal-footer">

                @Html.ActionLink("Ok", "Logout", "Home", null, new { @class = "log-out btn btn-large btn-Success" })


                <button type="button" class="btn btn-default btn-Danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ajaxComplete(function (event, xhr, ajaxOptions) {

        if (xhr.status == 401) {
            // the AJAX request failed because either the user was not
            // authenticated or his session expired. So here you could
