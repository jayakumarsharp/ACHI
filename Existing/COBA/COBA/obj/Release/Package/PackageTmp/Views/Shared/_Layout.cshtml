@using System.Web.Optimization;
@System.Web.Optimization.Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/customscripts")
@RenderSection("scripts", required: false)


<div class="col-lg-12 col-md-12">
    <div class="col-lg-2">
        <img src="@Url.Content("~/Content/images/Rcomlogo.jpg")"  style="float:left;width:224px;height:60px;" alt="Alternate Text" />
    </div>

    <div class="col-lg-2   col-lg-offset-7  col-mg-offset-7  col-md-2">
        @Html.ActionLink("Change Password", "ChangePasswordDisplay", "Home")
    </div>

    <div class="col-lg-1">
        <a href="#myModal" role="button" id="logout" class="CancelBtn" data-toggle="modal">Logout</a>
    </div>
</div>
<div class="container">
    @RenderBody()
</div>
