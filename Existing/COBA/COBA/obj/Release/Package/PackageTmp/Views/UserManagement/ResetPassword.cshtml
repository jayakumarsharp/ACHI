            <label for="pwd-user" class="col-lg-2 control-label">Username</label>
            <div class="col-lg-10">
                <div>
                    @*value="@WebSecurity.CurrentUserName"*@
                    <input type="text" id="pwd-user" name="username" class="form-control-custom" />
