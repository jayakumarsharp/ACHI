<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <img src="~/img/Close.png" /></button>
                <h4>Edit User</h4>
            </div>
            <div class="modal-body">


                @using (Html.BeginForm("EditUser", "UserManagement", FormMethod.Post, new { @class = "form-horizontal well" }))
                { 

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">EmpCode</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="e_Empcode" readonly="true">
                            @*<span id="usererror" style="color: Red; display: none">* Special Characters not allowed</span>*@
                        </div>

                    </div>

                    <div id="dyna"></div>
      
                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">EmpName</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="e_EmpName">
                        </div>
                    </div>@*

                    <div class="form-group">
                        <label for="input-password" class="col-lg-4 control-label">Password</label>
                        <div class="col-lg-6">
                            <input class="text-backcolor col-lg-7" name="password" id="e_input-password" placeholder="***********" type="password" autocomplete="off" maxlength="100">
                        </div>
                    </div>*@


                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">EmailID</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="e_email">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Contact No</label>
                        <div class="col-lg-6">
                            <input class="col-lg-7" name="userName" id="e_contact">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">UserType</label>
                        <div class="col-lg-6">
                            <select class="col-lg-7" name="userName" id="e_usertype"></select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Manager</label>
                        <div class="col-lg-6">
                            <select class="col-lg-7" name="userName" id="e_manager"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">HOD</label>
                        <div class="col-lg-6">
                            <select class="col-lg-7" name="userName" id="e_hod"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Role</label>
                        <div class="col-lg-6">
                            <select class="col-lg-7" name="userName" id="e_role"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="input-username" class="col-lg-4 control-label">Team</label>
                        <div class="col-lg-6">
                            <select class="col-lg-7" name="userName" id="e_team"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="chkstatus" class="lblchk col-lg-4 control-label">Status</label>
                        <div class="col-lg-8">
                            <input id="e_chkstatus" name="checkResp" type="checkbox">
                        </div>
                    </div>

                    <input type="hidden" id="hdnuId" />

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-4 mtop10">
                            <button type="button" class="SaveBtn" id="edit_user_submit">Update</button>
                            <button type="button" class="CancelBtn" id="editUser_cancel">Reset</button>
                        </div>
                    </div>

                    <p class="validation bg-danger" id="User_validator"></p>
                }
            </div>
        </div>
    </div>

</div>
