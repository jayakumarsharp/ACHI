@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="update-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <img src="~/img/Close.png" />
                </button>
                <h4>Update Password</h4>
            </div>
            <div class="modal-body">
                @using System.Web.Security;

                @using (Html.BeginForm("UpdatePassword", "UserManagement", FormMethod.Post, new { @class = "form-horizontal well", data_async = "", data_target = "#rating-modal" }))
                { 
        
                  
                    <div class="form-group">
                        <label for="new-pwd" class="col-lg-4 control-label">New Password</label>
                        <div class="col-lg-6">
                            <div>
                                <input type="password" id="new-pwd" name="newpwd" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirm-pwd=d" class="col-lg-4 control-label">Confirm Password</label>
                        <div class="col-lg-6">
                            <div>
                                <input type="password" id="confirm-pwd" name="confirmpwd" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <input id="hdnempcode" type="hidden" />

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-4 mtop10">
                            <button type="button" class="SaveBtn" id="btnsubmitupwd">Update</button>
                            <button type="button" id="btncancelupwd" class="CancelBtn" data-dismiss="modal">Reset</button>
                        </div>
                    </div>
                    <p class="validation bg-danger"></p>
                    
    
           
                }
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    $('#btncancelupwd').click(function () {
        $('#new-pwd').val('');
        $('#confirm-pwd').val('');
        $('.validation').html('');
    });

    $('#btnsubmitupwd').click(function () {


        $('.validation').html('');

        var userinfo =
    {
        id: $('#hdnempcode').val(),
        newpwd: $('#new-pwd').val(),
        confirmpwd: $('#confirm-pwd').val()
    }

        $.ajax({
            url: 'UpdatePassword',
            type: 'POST',
            data: userinfo,
            success: function (data) {
                if (data == "success") {
                    reloadPage("#RedirectToUserManagement");
                }
                else {
                    $('.validation').html(data)
                }
            },
            error: function (data) {
                alert(data)
                console.log(data);
            }
        });
    });




</script>
