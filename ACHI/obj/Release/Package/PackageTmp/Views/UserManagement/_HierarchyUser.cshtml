<div class="modal fade" id="hier-modal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <img src="~/img/Close.png" /></button>
                <h4>Hierarchy</h4>
            </div>
            <div class="modal-body">


                @using (Html.BeginForm("HierachyUser", "UserManagement", FormMethod.Post, new { @class = "form-horizontal well" }))
                { 

                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="input-username" class="col-lg-4 control-label">EmpCode</label>
                            <div class="col-lg-6">
                                <input class="col-lg-9" name="userName" id="h_Empcode" readonly="true">
                                @*<span id="usererror" style="color: Red; display: none">* Special Characters not allowed</span>*@
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label for="input-username" class="col-lg-4 control-label">EmpName</label>
                            <div class="col-lg-8">
                                <input class="col-lg-12" name="userName" id="h_Empname" readonly="true">
                                @*<span id="usererror" style="color: Red; display: none">* Special Characters not allowed</span>*@
                            </div>
                        </div>

                    </div>

                    <div id="dyna1"></div>
                    <div id="dyna2"></div>
      
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-5 mtop10">
                            <button type="button" class="SaveBtn" id="hier_user_submit">Update</button>
                            <button type="button" class="CancelBtn" id="hierUser_cancel">Reset</button>
                        </div>
                    </div>

                    <input id="hdnman" type="hidden" />
                    <input id="hdnhod" type="hidden" />

                    <p class="validation bg-danger" id="editUser_validator"></p>
                }
            </div>
        </div>
    </div>

</div>


<style>
    .controlright {
        float: right;
    }

    .bordercls {
        border: 1.5px solid #00a0f0 !important;
    }
</style>
